{
  "name": "yalp",
  "version": "0.2.0",
  "description": "Yet Another Lightshow Player (this one uses HTML/CSS/JavaScript and nodejs/commonjs)",
  "main": "./index.js",
  "yalp": {
    "comment": "set YALP default command line options here",
    "comment2": "any reason to change this to 'config'? so npm will set env vars?",
    "port": "2015",
    "ui": "false",
    "xui": "/usr/bin/google-chrome-stable",
    "zui": "firefox",
    "debug": {
      "level": "100",
      "loader-logging": "true",
      "line-stamps": "true",
      "no-try": "false"
    },
    "faultmon": "false",
    "filemon": "false",
    "xemail": {
      "from": "sender-email-address",
      "to": "destination-email-address (can be a comma-separated list)",
      "transport": {
        "comment": "this info is passed directly to nodemailer",
        "eg-port": "995",
        "eg-host": "your.emailserver.com",
        "eg-secure": "true",
        "eg-authMethod": "LOGIN",
        "service": "Gmail",
        "debug": "true",
        "auth": {
          "user": "your email userid here",
          "pass": "your password here"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "github.com/djulien/yalp"
  },
  "engines": {
    "node": ">4.0.0"
  },
  "keywords": [
    "yalp",
    "lightshow",
    "nodejs",
    "repl",
    "christmas",
    "player",
    "extreme",
    "sequence"
  ],
  "author": "djulien",
  "license": "TBD",
  "xbrowserify": {
    "no-worky": "use scripts command line instead",
    "transform": [
      "require-globify"
    ]
  },
  "scripts": {
    "example-see": "http://blog.keithcirkel.co.uk/how-to-use-npm-as-a-build-tool/",
    "lint": "jshint **",
    "prebuild:js": "npm run lint",
    "build:css": "stylus assets/styles/main.styl > dist/main.css",
    "build:js": "browserify assets/scripts/main.js > dist/main.js",
    "build": "npm run build:css && npm run build:js",
    "dedupe": "npm dedupe",
    "outdates": "npm outdated",
    "freeze": "npm install && npm shrinkwrap",
    "prestart": "echo Use config file or command line to set options",
    "start": "node  ./index.js",
    "predebug": "echo this will use node-inspector",
    "debug": "node-debug  ./index.js",
    "pretest": "echo ready to test",
    "test": "node  ./tests",
    "symlinks": "node  ./scripts/symlinks.js",
    "tester": "node-jig.js <file>"
  },
  "obsolete-scripts": {
    "test": "tbd",
    "testw": "watchify  ./plugins/misc/uiloader.js  -t require-globify  -o ./bundles/uiloader.js  -dv",
    "examples": "see http://substack.net/task_automation_with_npm_run",
    "build-example": "~/local-npm/bin/browserify js/main.js > js/findem.js",
    "build-prod-ex": "browserify browser/main.js | uglifyjs -mc > static/bundle.js",
    "watch-js": "watchify browser/main.js -o static/bundle.js -dv",
    "watch-css": "catw static/pages/*.css tabs/*/*.css -o static/bundle.css -v",
    "post-js": "onchange static/bundle.js -- npm test",
    "build-cli-min": "~/local-npm/bin/browserify  --debug  `ls ./plugins/*.js ./js/yalp.js`  --ignore express  --ignore jsdom  --ignore fs-extra  --ignore glob  --ignore serialport  -p [minifyify --map bundle.map.json --output bundle.map.json ]  -p [ factor-bundle `ls ./plugins/*.js ./js/yalp.js | sed 's:\\./[-a-z]*:-o ./bundles:'` ] -o ./bundles/shared.js",
    "build-cli-old": "~/local-npm/bin/browserify  --debug  `ls ./plugins/*.js ./js/yalp.js`  --ignore express  --ignore jsdom  --ignore fs-extra  --ignore glob  --ignore serialport  -p [ factor-bundle `ls ./plugins/*.js ./js/yalp.js | sed 's:\\./[-a-z]*:-o ./bundles:'` ] -o ./bundles/shared.js",
    "xbuild-ui": "~/local-npm/bin/browserify  --debug  ./plugins/misc/uiloader.js  `ls ./plugins/ui/*.js`  --ignore express  --ignore jsdom  --ignore fs-extra  --ignore glob  --ignore serialport  -o ./bundles/uiloader.js",
    "build-ui": "~/local-npm/bin/browserify  --debug  ./plugins/misc/uiloader.js  -t require-globify  --ignore express  --ignore jsdom  --ignore fs-extra  --ignore glob  --ignore serialport  -o ./bundles/uiloader.js",
    "show-deps": "~/local-npm/bin/browserify  --deps  --debug  ./plugins/misc/uiloader.js  -t require-globify  --ignore express  --ignore jsdom  --ignore fs-extra  --ignore glob  --ignore serialport  -o ./bundles/uiloader.js",
    "build-results": "ls -lR ./bundles",
    "start-detailed": "SVR=http://localhost:2015; iojs ./yalp.js $SVR YALP.html",
    "start-full": "iojs  ./yalp.js  --server  --browser",
    "start-server": "iojs  ./yalp.js  --server",
    "start": "node  ./yalp.js"
  },
  "bin": {
    "imhere": "scripts/imhere.js",
    "node-jig": "scripts/node-jig.js"
  },
  "dependencies": {
    "audio5": "^0.1.10",
    "binary-reader": "^0.1.2",
    "brace": "^0.5.1",
    "browserify": "^11.2.0",
    "browserify-replace": "^0.9.0",
    "buffertools": "^2.1.3",
    "byline": "^4.2.1",
    "callsite": "^1.0.0",
    "circular-json": "^0.2.0",
    "colors": "^1.1.2",
    "commander": "^2.8.1",
    "concentrate": "^0.2.3",
    "dissolve": "^0.3.3",
    "eventemitter2": "^0.4.14",
    "express": "^4.13.3",
    "falafel": "^1.2.0",
    "fs-ext": "git+https://github.com/baudehlo/node-fs-ext.git",
    "glob": "^5.0.14",
    "heapdump": "^0.3.7",
    "human-format": "^0.5.0",
    "inherits": "^2.0.1",
    "insist": "^1.0.0",
    "ip": "^1.0.1",
    "is-little-endian": "0.0.0",
    "jquery": "^2.1.4",
    "lame": "^1.2.3",
    "longjohn": "^0.2.9",
    "messenger": "0.0.9",
    "mime-types": "^2.1.7",
    "mp3dat": "^0.1.1",
    "mute-stream": "^0.0.5",
    "nan": "^2.1.0",
    "node-cache": "^3.0.0",
    "node-glob-loader": "^0.0.15",
    "node-hook": "^0.2.0",
    "node-ipc": "^3.0.0",
    "node-mpg123-util": "git+https://github.com/djulien/node-mpg123-util.git",
    "nodemailer": "^1.5.0",
    "object-sizeof": "^1.0.6",
    "objectstream": "0.0.4",
    "onecolor": "^2.5.0",
    "open": "^0.0.5",
    "path": "^0.11.14",
    "player": "^0.5.1",
    "pool_stream": "^0.0.3",
    "propagate": "^0.3.1",
    "q": "^1.4.1",
    "serialport": "^2.0.2",
    "sh.js": "^1.1.1",
    "shelljs": "^0.5.3",
    "simplemessages": "0.0.6",
    "socket.io": "^1.3.7",
    "socket.io-client": "^1.3.7",
    "speaker": "^0.2.6",
    "sprintf-js": "^1.0.3",
    "stream": "^0.0.2",
    "term-canvas": "0.0.5",
    "tinycolor2": "git+https://github.com/djulien/TinyColor.git",
    "tokenizer": "^1.1.2",
    "traverse": "^0.6.6",
    "trivial-port": "^0.3.2",
    "tty.js": "^0.2.15",
    "wormhole": "^3.0.0",
    "xmldoc": "^0.3.2"
  },
  "comment-devDependencies": "none, since this is an IDE-like app",
  "comment2-devDependencies": "actually, put RPi-specific deps (mostly GPIO) into dev so they can be excluded from generic dev machine",
  "devDependencies": {
    "onoff": "^1.0.2"
  },
  "xdependencies": {
    "autostrip-json-comments": "0.0.4",
    "commander": "git+https://github.com/djulien/commander.js.git",
    "connect-livereload": "^0.5.3",
    "domready": "^1.0.8",
    "font-awesome": "^4.4.0",
    "forever-monitor": "^1.6.0",
    "fs-extra": "^0.24.0",
    "gulp": "^3.9.0",
    "gulp-changed": "^1.3.0",
    "gulp-concat": "^2.6.0",
    "gulp-jshint": "^1.11.2",
    "gulp-strip-debug": "^1.0.2",
    "gulp-uglify": "^1.4.1",
    "insist": "^1.0.0",
    "jquery": "^2.1.4",
    "jquery-ui": "^1.10.5",
    "minimist": "^1.2.0",
    "node-glob-loader": "git+https://github.com/djulien/Loader.git",
    "noide": "0.0.7",
    "packpath": "^0.1.0",
    "play-audio": "^0.1.0",
    "player": "git+https://github.com/djulien/player.git",
    "really-need": "^1.6.3",
    "require-globify": "git+https://github.com/djulien/require-globify.git",
    "socket.io": "^1.3.6",
    "tiny-lr": "^0.1.6",
    "url": "^0.11.0",
    "watchify": "^3.4.0",
    "xinsist": "git+https://github.com/djulien/insist.git",
    "xml2js": "^0.4.12",
    "xmldoc": "^0.3.1",
    "xnode-hook": "git+https://github.com/djulien/node-hook.git"
  }
}
